<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:rowCount="2"
    android:padding="5dp"
    android:background="#CCC4C4C4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="start"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="信長の野望 37年売れ続ける訳" />

    <ImageButton
        android:id="@+id/detail_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_row="0"
        android:background="#0000"
        android:src="@drawable/ic_baseline_read_more_24" />

    <ImageButton
        android:id="@+id/bookmark_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_row="0"
        android:background="#0000"
        android:src="@drawable/ic_baseline_bookmark_border_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="start"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:text="政府の携帯料金引き下げの方針を受けてKDDIとソフトバンクが新料金プランを発表した。KDDIは「UQモバイル」でデータ利用量が20ギガバイトで月額3980円、ソフトバンクも「ワイモバ…"
        />
</GridLayout>
